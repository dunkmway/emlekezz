model User {
  ///////////////////
  // DO NOT MODIFY //
  ///////////////////
  // Object info
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  // Site info
  roles        String[] @default([])
  permissions  String[] @default([])
  // Person info
  username     String   @unique
  passwordHash String
  ///////////////////
  // DO NOT MODIFY //
  ///////////////////

  // Additional fields can be added here:
  Note Note[]
}

model JwtBlacklist {
  id  String   @id
  exp DateTime

  @@index([exp])
}
