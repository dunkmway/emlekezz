model User {
  ///////////////////
  // DO NOT MODIFY //
  ///////////////////
  // Object info
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Site info
  roles       String[] @default([])
  permissions String[] @default([])
  // Person info
  firstName   String
  lastName    String
  ///////////////////
  // DO NOT MODIFY //
  ///////////////////

  // Additional fields can be added here:
}

model JwtBlacklist {
  id  String   @id
  exp DateTime

  @@index([exp])
}
